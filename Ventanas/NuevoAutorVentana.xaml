<Window x:Class="ProyectoRevista.Ventanas.NuevoAutorVentana"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoRevista.Ventanas"
        mc:Ignorable="d"
        xmlns:inputLayout="http://schemas.syncfusion.com/wpf"
        Title="NuevoAutorVentana" 
        Height="400" Width="500"
        ResizeMode="NoResize" 
        ShowInTaskbar="False" 
        Icon="/Recursos/ventana_autor_icono.ico">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <inputLayout:SfTextInputLayout Hint="Nombre" HelperText="Nombre del autor" Margin="10">
            <TextBox x:Name="tbxNombre"></TextBox>
        </inputLayout:SfTextInputLayout>

        <inputLayout:SfTextInputLayout Hint="Red Social" HelperText="Nickname" Margin="10">
            <TextBox x:Name="tbxRedSocial"></TextBox>
        </inputLayout:SfTextInputLayout>

        <inputLayout:SfTextInputLayout Hint="Red social" HelperText="Elegir la red social correspondiente" Margin="10">
            <ComboBox x:Name="cbxNacionalidad" Width="150" ItemsSource="{Binding Path=ListaRedesSociales}" SelectedItem="{Binding Path=Nacionalidad}"></ComboBox>
        </inputLayout:SfTextInputLayout>
    </StackPanel>
</Window>
